<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="root" alignment="TOP_CENTER" minHeight="-Infinity" minWidth="100.0" prefHeight="400.0" prefWidth="200.0"
      xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ftg.application.gui.person.PersonView">
    <children>
        <Label fx:id="name" text="name"/>
        <GridPane alignment="TOP_CENTER" hgap="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="100"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Birth date" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="birthDate" text="birth date" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Age" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="age" text="age" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <ListView fx:id="states" prefHeight="200.0" prefWidth="200.0"/>
        <ListView fx:id="relations" prefHeight="200.0" prefWidth="200.0"/>
    </children>
</VBox>
